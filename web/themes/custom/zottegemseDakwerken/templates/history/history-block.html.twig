{# themes/custom/zottegemseDakwerken/templates/history/history-block.html.twig #}
<div class="history-block">
  {# Check if icon exists and display the image if it does #}
  {% if icon %}
    <img src="{{ icon }}" alt="{{ title }}"  class="icon" />
  {% endif %}
  <div class="history-block__right">
    <h2>{{ title }}</h2>
    <p>{{ description }}</p>
  </div>
</div>
